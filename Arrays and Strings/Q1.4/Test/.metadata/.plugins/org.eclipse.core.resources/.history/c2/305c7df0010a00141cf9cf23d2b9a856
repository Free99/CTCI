public class replace {
	public static String replaceSpace(String s) {
		if (s == null) return null;
		int len = s.length();
		if (len == 0) return null;
		int count = 0;
		for (int i = 0; i < len; ++i) {
			if (s.charAt(i) == ' ')
				++count;
		}
		
		char[] cc = new char[len + count * 2 + 1];
		int p = 0;
		for (int i = 0; i < len; ++i) {
			if (s.charAt(i) == ' ') {
				cc[p] = '%';
				cc[p+1] = '2';
				cc[p+2] = '0';
				p += 3;
			} else {
				cc[p] = s.charAt(i);
				p++;
			}
		}
	}
}
